                            </c:DataGridMergeColumn.Columns>
                        </c:DataGridMergeColumn>

                        <c:DataGridMergeColumn HeaderStyle="{StaticResource DataGridMergeColumnHeader}" ExHeader="{StaticResource Month10}">
